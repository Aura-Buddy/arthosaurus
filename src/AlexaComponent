import React, { useState } from 'react';
import { SkillBuilders } from 'ask-sdk';

const AlexaComponent = () => {
    const [responseText, setResponseText] = useState('');
    var response = JSON.parse(responseText);


    const handleAlexaInteraction = async () => {
        const skill = SkillBuilders.custom()
            .addRequestHandlers({
                LaunchRequest: () => {
                    return {
                        outputSpeech: 'Hello! Welcome to my Alexa-enabled React app.',
                    };
                },
            })
            .create();

        const response = await skill.invoke({});
        setResponseText(response.outputSpeech);
    };

    return (
        <div>
        <h1>My React App with Alexa Integration < /h1>
            < button onClick = { handleAlexaInteraction } > Invoke Alexa < /button>
                < p > { responseText } < /p>
                < /div>
  );
};

export default AlexaComponent;
